<%= simple_form_for [@book, @review] do |f| %>
  <div id="rating-form" data-score=<%= @review.rating %>>
    <label>Rating</label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit, class: "btn-custom" %>
<% end %>

<script type="text/javascript">
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]',
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>
