<%= simple_form_for @book, :html => {:multipart => true} do |f| %>
  <%= f.association :categories %>
  <%= f.input :image, as: :file, input_html: { class: "filestyle" } %>
  <%= f.input :title %>
  <%= f.input :description, input_html: {rows: 5}  %>
  <%= f.input :author %>
  <%= f.button :submit %>
<% end %>
