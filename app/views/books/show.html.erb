<div class="row">
  <div class="book-image-section col-xs-12 col-sm-6 col-md-4 col-lg-4">

    <%= image_tag @book.image_url, class: "book-show" %>

    <div class="btn-section">
      <div class="btn-group">
        <% if @book.user == current_user %>
          <%= link_to t('edit'),   edit_book_path(@book), class: "btn btn-default" %>
          <%= link_to t('delete'), book_path(@book), method: :delete, data: { confirm: t('are_you_sure?') }, class: "btn btn-default" %>
        <% else %>
          <div class='book-evaluation'><%= t('evaluation') %></div>
          <span id="evaluation"></span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
    <div class="block">
      <h3><%= @book.title %></h3>
      <h4 class="author"><%= @book.author %></h4>
      <div class="average-book-evaluation-section">
        <span id="average-book-evaluation"></span>
        <span class="number-of-evaluations-section">
          <%= t('number_of_evaluations') %>:
          <span id="number-of-evaluations">
            <%= @number_of_evaluations %>
          </span>
        </span>
      </div>
      <p class="book-description"><%= @book.description %></p>
    </div>
    <div class="btn-section">
      <div class="btn-group">
        <%= link_to t('add_comment'), new_book_comment_path(@book), class: "btn btn-default" %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8" style="float: right;">
    <div class="block">
      <h3><%= t('comments') %></h3>
      <%= render @comments %>
      <div class="text-center">
        <%= paginate @comments, pagination_class: "pagination-sm" %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  setAverageEvaluation(<%= @average_evaluation %>)

  $('#evaluation').raty({
    size: 24,
    path: '/assets/',
    score: <%= @user_evaluation ? @user_evaluation.value : 0 %>,
    starHalf: 'star-half-big.png',
    starOff: 'star-off-big.png',
    starOn: 'star-on-big.png',
    click: function(score, callback) {
      $.ajax({
        type: "POST",
        url: "<%= book_evaluate_path(@book) %>",
        data: {
          evaluation: {
            value: score
          }
        }
      });
    }
  });
</script>
