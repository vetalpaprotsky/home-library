<% if params[:category] %>
  <h1 class="category-header"><%= params[:category] %></h1>
<% end %>
<select class="selectpicker" data-live-search="true" title="Choose one of the following...">
  <% Category.cached_categories.each do |category| %>
    <% if params[:category] == category.name %>
      <option value="<%= books_path(category: category.name) %>" selected="selected">
        <%= category.name %>
      </option>
    <% else %>
      <option value="<%= books_path(category: category.name) %>">
        <%= category.name %>
      </option>
    <% end %>
  <% end %>
</select>
<% if @books.any? %>
  <div class="row">
    <%= render @books %>
    <div class="home-page-pagination text-center col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <%= paginate @books %>
    </div>
  </div>
<% else %>
  <h2><%= t('no_books') %></h2>
<% end %>
